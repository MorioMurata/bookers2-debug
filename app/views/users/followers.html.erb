<h2>Follower Users</h2>
<% if current_user.followers.count == 0 %>
  <p>フォロワーはいません</p>
<% else %>
  <table class='table'>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.followers.count %></td>
        <td>フォロワー数：<%= user.followeds.count %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    </table>
  <% end %>
<% end %>